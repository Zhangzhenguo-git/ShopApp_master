<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/itemHistoryIvIcon"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp_15"
        android:src="@mipmap/shop_search_history"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/itemHistoryTvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/itemHistoryIvIcon"
        app:layout_constraintBottom_toBottomOf="@id/itemHistoryIvIcon"
        app:layout_constraintStart_toEndOf="@id/itemHistoryIvIcon"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="@color/c_9b9b9b"
        android:textSize="@dimen/sp_14"
        tools:text="历史记录1"/>

    <ImageView
        android:id="@+id/itemHistoryIvDelete"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintTop_toTopOf="@id/itemHistoryIvIcon"
        app:layout_constraintBottom_toBottomOf="@id/itemHistoryIvIcon"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_2"
        android:src="@mipmap/shop_search_history_delete"
        android:scaleType="fitXY"/>

    <View
        android:id="@+id/itemHistoryDivider"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_0_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/c_dddddd"/>



</androidx.constraintlayout.widget.ConstraintLayout>