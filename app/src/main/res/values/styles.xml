<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="scienceAppListItemRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/science_drawable_ratingbar</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:maxHeight">8dip</item>
    </style>
    <style name="scienceProgressBarHorizontal" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/science_download_progress_horizontal</item>
        <item name="android:minHeight">@dimen/dp_24</item>
        <item name="android:maxHeight">@dimen/dp_24</item>
    </style>

</resources>
