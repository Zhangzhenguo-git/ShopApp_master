<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/msg_custommessage_bottom_corner_radius_white">
        <TextView
            android:id="@+id/dialog_messagedetails_tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="消息标题"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/c_333333"
            android:textStyle="bold"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/dialog_messagedetails_tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:textColor="@color/gray"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:lineSpacingExtra="@dimen/dp_5"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10">
            <TextView
                android:id="@+id/dialog_messagedetails_tvType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/c_3270f2"
                android:singleLine="true"
                android:textSize="10sp"
                android:visibility="visible"
                android:gravity="left"
                android:layout_weight="1"
                >
            </TextView>
            <TextView
                android:id="@+id/dialog_messagedetails_tvInTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:gravity="right"
                android:layout_weight="1">
            </TextView>
        </LinearLayout>

        <View
            style="@style/CustomDialogLine"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dialog_messagedetails_tvCancel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="打开插件"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/c_3270f2"
                android:gravity="center"
                android:layout_weight="1"
                />
            <View
                android:id="@+id/dialog_messagedetails_vLine"
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="match_parent"
                android:background="@color/c_aaaaaa"
                />
            <TextView
                android:id="@+id/dialog_messagedetails_tvConfirm"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="确定"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/c_3270f2"
                android:gravity="center"
                android:layout_weight="1"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
